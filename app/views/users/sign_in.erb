<div class="form-group">
  <h3>
    <% if flash[:error] != nil %>
      <%= flash[:error] %>
    <% end  %>
  </h3>
</div>

<h1>Sign In</h1>
<form action="/sessions" method="POST" role="form">
  <div class="form-group">
    <label for="inputUsername">Username</label>
    <input name="user[username]" type="username" class="form-control" id="inputUsername" placeholder="Enter username">
  </div>
  <div class="form-group">
    <label for="inputPassword">Password</label>
    <input name="user[password]" type="password" class="form-control" id="inputPassword" placeholder="Password">
  </div>
  <button type="submit" name="submit" value="Sign In" class="btn btn-success">Sign In</button><button type="submit" name="submit" value="create" class="btn btn-success">Create new Account</button>
</form>